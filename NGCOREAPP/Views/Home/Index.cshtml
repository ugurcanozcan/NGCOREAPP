@{
    ViewData["Title"] = "Home Page";
}

<div class="row" ng-app="APP" ng-controller="Home">

    <div class="col-md-12">

        <div class="col-md-11">
            <div class="form-group">
                <label>Uzun Linki Giriniz:</label>
                <input class="form-control" ng-model="_link.LongUrl" />
            </div>
        </div>

        <div class="col-md-1">
            <button class="btn btn-primary" ng-click="GenerateShort()">Kısalt</button>
        </div>

        <div class="col-md-12">
            <strong>Kısa Linkiniz: {{ShortLink}}</strong>
        </div>

    </div>

    <div class="col-md-12">
        <table class="table">
            <thead>
                <tr>
                    <td>Uzun Link</td>
                    <td>Kısa Link</td>
                    <td>Tıklanma Sayısı</td>
                    <td></td>
                </tr>
            </thead>
            <tbody>
                <tr ng-repeat="link in LinkList">

                    <td>{{link.longUrl}}</td>
                    <td id="kopyala{{link.shortUrl}}">https://localhost:7177/D/I?I={{link.shortUrl}}</td>
                    <td>{{link.clickCount}}</td>
                    <td>
                        <a ng-show="link.clickCount >= link.clickLimit" ng-click="AddCredit(link)"  class="btn-sm btn-warning">Ek Kredi</a>
                        <a class="btn-sm btn-success" ng-click="PreCopy(link.shortUrl)">Kopyala</a>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>



    <div ng-show="Copied!=''" id="msg" style="background-color: #00000059;width:auto;padding:15px;position: absolute;bottom: 65px;right: 42%; text-align:center">
        Kopyalandı : {{Copied}}
    </div>
</div>

@section Scripts{
    <script src="~/js/Home.js"></script>
}
